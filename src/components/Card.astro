---
import { Image } from 'astro:assets'
import ArrowIcon from './icons/ArrowIcon.astro'

interface Props {
    image: ImageMetadata
    altImage: string | null
    title: string
    technologies: string[],
    link?: string
}

const { image, altImage, title, technologies, link } = Astro.props
---

<article class="flex flex-col gap-3 group/item mb-8">
    <a href={link} class="p-3 rounded-md group-hover/item:bg-slate-800/50 group-hover/list:opacity-50 group-hover/item:!opacity-100 transition-all">
        <div class="w-full rounded-md h-36 overflow-hidden bg-slate-700">
            <Image src={image} alt={altImage} class="rounded-md ml-6 mt-6 group-hover/item:ml-4 group-hover/item:mt-4 w-full transition-all"></Image>
        </div>
        <div class="pa-6">
            <div class="flex justify-between items-center my-3">
                <h3 class="font-medium text-slate-200 leading-tight my-2 group-hover/item:text-teal-400">{title}</h3>
                <ArrowIcon class="w-5 h-5 group-hover/item:text-teal-400 group-hover/item:-translate-y-1 duration-200" />
            </div>
            <slot/>
            <ol class="flex flex-wrap gap-2 mt-8">
                {
                    technologies.map( technology => 
                        <li class="rounded-full bg-teal-400/10 px-3 py-1 text-xs font-medium leading-5 text-teal-300">
                            {technology}
                        </li>
                    )
                }
            </ol>
        </div>
    </a>
</article>