---
interface Props {
    date: string
    company: string
    role: string
    technologies: string[]
}

const { date, company, role, technologies } = Astro.props
---

<li class="min-h-40 mb-10 group relative item">
    <span class="absolute dot h-3 w-3 rounded-full bg-teal-400"></span>
    <div class="group-hover:bg-slate-800 p-4 rounded-md transition-all duration-150">
        <time class="text-xs font-semibold uppercase tracking-wide">{date}</time>
        <h3 class="font-medium text-slate-200 leading-tight my-2">{company}</h3>
        <h3  class="text-sm font-semibold uppercase tracking-wide">{role}</h3>

        <div class="text-sm lead tracking-wider mt-8">
            <slot />
        </div>

        <ol class="flex flex-wrap gap-2 mt-8">
            {
                technologies.map( technology => 
                    <li class="rounded-full bg-teal-400/10 px-3 py-1 text-xs font-medium leading-5 text-teal-300">
                        {technology}
                    </li>
                )
            }
        </ol>
    </div>
</li>

<style>
    .item {
        cursor: pointer;
    }
    .dot{
        top: 20px;
        left: -7px;
    }
</style>